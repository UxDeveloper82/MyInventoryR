@model Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="card-my-4 mt-5 text-black-50 text-uppercase">
                <br><Bold>Details Page</Bold>
            </h1>
            <hr />
        </div>
        <div class="row mb-2">
            @if (!String.IsNullOrEmpty(Model.ModelImage))
            {
                var image_path = $"/ModelImage/{Model.ModelImage}";
                <div class="col-md-6">
                    <div class="card flex-md-row mb-4 box-shadow h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                            <h2><strong class="d-inline-block mb-2 text-primary">Work Order: @Model.WorkOrder</strong></h2>
                            <ul>
                                <li>Customer Name: @Model.CustomerFirst</li>
                                <li>Customer Last: @Model.CustomerLast</li>
                                <li>Email: @Model.Email</li>
                                <li>Phone Number @Model.MobilPhone</li>
                                <li>Address: @Model.BillingAddress</li>
                                <li>Date Added: @Model.Created</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <img style="width:100%" class="img-thumbnail" src="@image_path" />
                </div>
            }
            else
            {
                <div class="container">
                    <h2 class="text-uppercase">No Image For this work Order</h2>
                    <h2><strong class="d-inline-block mb-2 text-primary">Work Order: @Model.WorkOrder</strong></h2>
                </div>
            }
        </div>
    </div>
</div>