@model RegisterViewModel

@{ ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<form class="blogform-signinForm" asp-controller="Auth" asp-action="Register" method="post">
    <h1 class="h3 mb-3 font-weight-normal">Please Register</h1>
    <div class="form-group">
        <label for="Username">Email</label>
        <input class="form-control" asp-for="Email" required autofocus />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input class="form-control" asp-for="Password" required />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label for="Password">Confirm Password</label>
        <input class="form-control" asp-for="ConfirmPassword" required />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
</form>
