@model IEnumerable<MyInventoryR.Models.Part>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h2>Truck Inventory</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table id="parts" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Part Quantity</th>
                                <th>Part Name</th>
                                <th>Part Number</th>
                                <th>Part Description</th>
                                <th>Part Price</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


@section scripts {
    <script>
        $(document).ready(function () {
            var table = $("#parts").DataTable({
                ajax: {
                    url: "/api/parts",
                    dataSrc: ""
                },
                columns: [
                    { data: "numberInStock" },
                    { data: "name" },
                    { data: "partNumber" },
                    { data: "partDescription" },
                    { data: "partPrice" }
                ]
            });
        });
    </script>
}